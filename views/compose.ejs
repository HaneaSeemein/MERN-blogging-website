<%- include("partials/header"); -%>
    <h1>Compose</h1>
    <form class="" action="/compose" method="post">
        <div class="form-group">
            <label>Title</label>
            <input type="text" class="form-control" name="postTitle" style="width:30%">
            <label>Post</label>
            <textarea class="form-control" name="postBody" rows="5" cols="30"></textarea>
            <div class="form-group">
            <label>Link to a picture</label>
            <input class="form-control" type="url" name="postPicture">

        </div>
        <button class="btn btn-primary" type="submit" name="button">Publish</button>
    </form>
<%- include("partials/footer"); -%>